{%  extends 'adminBase.html.twig' %}

{% block title %}Idologis |Manager index{% endblock %}

{% block body %}
<div class="container">
   <div class="row">
       <div class="col-md-12">
           <h1 class="mt-5 mb-3 text-white">Les gestionaires des biens</h1>

           <table class="table">
               <thead>
               <tr>
                   <th>Id</th>
                   <th>Nom</th>
                   <th>Filename</th>
                   <th>actions</th>
               </tr>
               </thead>
               <tbody>
               {% for manager in managers %}
                   <tr>
                       <td>{{ manager.id }}</td>
                       <td>{{ manager.name }}</td>
                       <td>{{ manager.filename }}</td>
                       <td>
                           <a href="{{ path('manager_show', {'id': manager.id}) }}">Voir</a>
                           <a href="{{ path('manager_edit', {'id': manager.id}) }}">edit</a>
                       </td>
                   </tr>
               {% else %}
                   <tr>
                       <td colspan="4">Aucun enregistrement trouvé</td>
                   </tr>
               {% endfor %}
               </tbody>
           </table>

           <a href="{{ path('manager_new') }}" class="btn btn-warning">Créer un nouveau</a>
       </div>
   </div>
</div>
{% endblock %}
