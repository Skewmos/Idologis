{%  extends 'base.html.twig' %}
{% block title 'Idologis | home' %}
 {% block body %}
<div class="container">
 <div class="jumbotron text-center">
  <h1>PROJET IMMOBILIER, PROJET DE VIE</h1>
  <h3>BIENVENUE SUR NOTRE PLATEFORME</h3>
 </div>
 <div class="container">
  <h2>Les derniers biens</h2>
  <div class="row flex">
      {% dump(properties) %}
   {% for property in properties %}
     <div class="col-4">
      <div class="card">
          {%  if property.filename %}
              <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="" class="card-img-top">
          {% else %}
              <img src="{{ '/images/properties/empty.jpg' | imagine_filter('thumb') }}" alt="">
          {% endif %}
        <div class="card-body">
          <h5 class="card-title">
           <a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.name }}</a>
          </h5>
         <p class="card-text"> {{ property.ZipCode }} </p>
        </div>
      </div>
     </div>
   {% endfor %}
  </div>
 </div>
</div>

 {% endblock %}