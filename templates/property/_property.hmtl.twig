<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">{{ property.name }}</a>
        </h5>
        <p class="card-text">{{ property.surface }} m² -{{ property.city }} ({{ property.zipCode }})</p>
        <div class="text-primary">
            {{ property.price }} €
        </div>
    </div>
</div>