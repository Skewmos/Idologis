{% extends 'base.html.twig' %}
{% block title property.name %}
{% block body %}
    <div class="container mt-4">
       <div class="row">
           <div class="col-md-8">

           </div>
           <div class="col-md-4">
               <h1>{{ property.name }}</h1>
               <h2>{{ property.rooms }} piéces  - {{ property.surface }} m²</h2>
               <a href="#" class="btn btn-info">Contacter l'agence</a>
           </div>

           <p>
               {{ property.description | nl2br }}
           </p>

           <div class="row">
               <div class="col-md-8">
                   <h2>Caractéristiques</h2>
                   <table class="table-striped">
                       <tr>
                           <td>Surface habitable</td>
                           <td>{{ property.surface }}</td>
                       </tr>
                       <tr>
                           <td>Surface du terrain</td>
                           <td>{{ property.surfaceTer }}</td>
                       </tr>
                       <tr>
                           <td>Nombre de piéces</td>
                           <td>{{ property.rooms }}</td>
                       </tr>
                       <tr>
                           <td>Nombre de chambre</td>
                           <td>{{ property.bedrooms }}</td>
                       </tr>
                       <tr>
                           <td>Classe énergitique</td>
                           <td>{{ property.surface }}</td>
                       </tr>
                   </table>
               </div>
               <div class="col-md-4">
                   <h2>Spécificité</h2>
               </div>
           </div>
       </div>
    </div>
{% endblock %}



{% endblock %}

